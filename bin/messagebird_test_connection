#!/usr/bin/env ruby

# $LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

require 'pp'
require 'messagebird'

MessageBird.configure do
  username    'nedappep'
  password    'testpass'
  sender_name 'NedapPep'
end

MessageBird.deliver("NedapPep", "31648951497", "test message") do |response|
  pp response
end
